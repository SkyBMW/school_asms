
void setup(){    //this method runs once when the program first starts


//create a window 800 pixels wide and 600 pixels high

  size(800,600);

// make the background plain white

  background(255);

// make all fill black (text is displayed in the fill colour)

  fill(0);

// write text 10 pixels from the left of the window and 20 pixels from the top

  text("Hello, World!", 10, 20);

}             //the closing curly bracket indicates the end of the

             //setup method


